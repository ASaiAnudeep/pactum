{
  "name": "pactum",
  "version": "2.0.1",
  "description": "REST API endpoint testing tool with a mock server & compatible with pact.io for contract testing",
  "main": "./src/index.js",
  "files": [
    "/src"
  ],
  "exports": {
    ".": "./src/index.js",
    "./handler": "./src/exports/handler.js",
    "./matcher": "./src/exports/matcher.js",
    "./mock": "./src/exports/mock.js",
    "./pact": "./src/exports/pact.js",
    "./provider": "./src/exports/provider.js",
    "./request": "./src/exports/request.js",
    "./settings": "./src/exports/settings.js",
    "./state": "./src/exports/state.js"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:component",
    "test:unit": "mocha --timeout 10000 ./test/unit/",
    "test:component": "mocha --timeout 10000 ./test/component/",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test"
  },
  "keywords": [
    "api",
    "REST",
    "testing",
    "component testing",
    "contract testing",
    "consumer driven testing",
    "fake",
    "mock",
    "mocking",
    "server",
    "JSON",
    "pact",
    "pact-js",
    "pact.io",
    "pactum",
    "microservice",
    "microservices",
    "test",
    "http",
    "GraphQL"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ASaiAnudeep/pactum.git"
  },
  "homepage": "https://github.com/ASaiAnudeep/pactum/wiki",
  "bugs": {
    "url": "https://github.com/ASaiAnudeep/pactum/issues"
  },
  "author": "Anudeep <asa.anudeep4@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "deep-extend": "^0.6.0",
    "djv": "^2.1.3-alpha.0",
    "form-data": "^3.0.0",
    "json-query": "^2.2.2",
    "parse-graphql": "^1.0.0",
    "phin": "^3.4.1",
    "polka": "^0.5.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.0",
    "sinon": "^9.0.2"
  },
  "engines": {
    "node": ">=8"
  }
}
